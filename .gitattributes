# Auto-detect text files and normalize line endings
* text=auto

# Treat Python files as text
*.py text

# Treat JSON, YAML, and config files as text
*.json text
*.yml text
*.yaml text

# Treat images as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary

# Treat audio as binary
*.wav binary
*.mp3 binary
*.ogg binary

# Treat assets as binary
assets/** binary
